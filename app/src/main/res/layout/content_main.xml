<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="minhna.android.airchannel.view.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/bar_layout"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_channel"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardview_height_large"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:id="@+id/rl_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/ic_channel"
                android:layout_width="@dimen/ic_size"
                android:layout_height="@dimen/ic_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@mipmap/ic_channel"/>
            <TextView
                android:id="@+id/tv_channel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/ic_channel"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorFeature2"
                android:textSize="@dimen/label_size"
                android:textStyle="bold"
                android:text="@string/label_channel"/>
            <View
                android:layout_width="@dimen/divider_dimen"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/colorFeature2"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_tv_guide"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardview_height_large"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_channel"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/ic_tv_guide"
                android:layout_width="@dimen/ic_size"
                android:layout_height="@dimen/ic_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@mipmap/ic_event"/>
            <TextView
                android:id="@+id/tv_tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/ic_tv_guide"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorFeature1"
                android:textSize="@dimen/label_size"
                android:textStyle="bold"
                android:text="@string/label_tv_guide"/>
            <View
                android:layout_width="@dimen/divider_dimen"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/colorFeature1"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_fav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_tv_guide"
        app:layout_constraintVertical_bias="0.012">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_fav"
                android:layout_width="@dimen/ic_size"
                android:layout_height="@dimen/ic_size"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@mipmap/ic_fav" />

            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin_normal1"
                android:layout_toEndOf="@+id/ic_fav"
                android:text="@string/label_favorite"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/label_size"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_fav"
                android:layout_marginTop="@dimen/activity_horizontal_margin_smaller"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_dimen"
            android:background="@color/colorAccent"
            android:layout_gravity="bottom"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
